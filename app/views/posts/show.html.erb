    <!-- Page Content -->
    <div class="container">
      <!-- Portfolio Item Heading -->
      <div class="row">
        <div class="col-lg-12">
          <h1 class="my-4"><%= @post.title %>
            <small>???</small>
          </h1>
        </div>   
      </div>
      <!-- Portfolio Item Row -->
      <div class="row">
        <div class="col-md-8">
          <%= image_tag @post.image, class: 'img-fluid rounded' %>
        </div>
        <div class="col-md-4">
          <h3>Project Description</h3>
          <p>
            <%= @post.body %>
          </p>
        </div>
      </div>
      <!-- /.row -->
      <!-- Related Projects Row -->
      <div class="row">
        <div class="col-lg-12">
          <h3 class="my-4">Related Projects</h3>
        </div>
       <%= Post.find_each(batch_size: 3) do |post| %>
        <div class="col-md-4 p-4 mx-auto">
          <%= link_to post_path(post) do %>
            <%= image_tag post.image, class: 'img-fluid portfolio-item' %>
          <% end %>
        </div>
        <% end %>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container -->